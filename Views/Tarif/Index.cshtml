<title>Tarifler</title>
@* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> *@
@{
	Layout = "~/Views/Shared/_LayoutAlternative.cshtml";
}
@model IEnumerable<Ahtapot_Recipe.Models.TarifModel>

<br><br><br><br>


<div class="list-group">
	@if (Model != null)
	{
	<div style="margin-top: auto;" class="btn-group" role="group" aria-label="Basic example">
		<a style="float: right" href="/Tarif/Ekle">
			<input type="button" class="btn btn-success" value="Tarif Ekle" />
		</a>
	</div>
		<br>

		<br>

		<br>

		<br>
		@foreach (var item in Model)
		{
			var hrefDetay = "/Tarif/TarifSil/" + @item.Id;
						<a href=@hrefDetay class="list-group-item list-group-item-action" aria-current="true">
							<div class="d-flex w-100 justify-content-between">
								<h5 style="font-size: 70px " class="mb-1">Yemek Adı: @item.YemekAdi.ToString()</h5>
								<small>Oluşturulma Tarihi: @item.OlusturulmaTarihi.ToString()</small>
							</div>
							<p style="font-size: 45px " class="mb-1">Yapılışı: @item.Yapilisi.ToString()</p>
							<small style="font-size: 30px ">Malzemeleri: @item.Malzemeler.ToString()</small>
				@{
					var href = "/Tarif/Duzenle/" + @item.Id;
				}

							<a href=@href>
								<input type="button" class="btn btn-success" value="Tarif Düzenle" />
							</a>
						</a>


		}
	}
	else
	{
			<div class="d-flex w-100 justify-content-between">
									<h5 style="font-size: 70px " class="mb-1">Lütfen Giriş Yapınız</h5>
									
								</div>
	}
</div>